{% extends "base.twig" %}

{% block content %}

	<article class="post-type-{{ post.post_type }} wrapper" id="post-{{ post.ID }}">
		<div class="article-meta">
			{% for cat in post.categories %}
				<h3>{{ cat.title }}</h3>
			{% endfor %}
			<h1 class="article-title">{{ post.title }}</h1>
			{{ post.post_date|date}}
		</div>
		<div class="article-content">
			<section class="the-content">
				{{ post.content }}
			</section>
		</div>
	</article>

	{% include "components/pagination.twig" %}

	{% include "components/related-posts.twig" %}

{% endblock %}
