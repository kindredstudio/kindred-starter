<div class="mm-overlay">
    <div class="mm-inner">

        <button type="button" class="mm-close mm-trigger">
            <span></span>
            <span></span>
        </button>

        <nav id="site-navigation" class="mobile-nav" role="navigation">

            <div class="search">
              <form role="search" method="get" id="searchform" action="{{site.url}}">
                <div class="inner-wrap">
                  <input type="search"
                    name="q"
                    placeholder="Search">
                    <button type="submit">
                      <img src="{{theme.link}}/assets/images/search.png" alt="">
                    </button>
                </div>
              </form>
            </div>

            <ul>
              {% for item in menu_primaryNav.get_items %}
              {% if item.get_children %}
                  <li class="site-nav--has-submenu">
                    <a href="{{ item.link }}" class="trigger site-nav__link">
                      {{ item.title }}
                    </a>
                    <ul class="hidden site-nav__submenu">
                      {% for child in item.get_children %}
                        <li>
                          <a href="{{ child.get_link }}" class="site-nav__link">{{ child.title }}</a>
                        </li>
                      {% endfor %}
                    </ul>
                  </li>
              {% else %}
                  <li>
                    <a href="{{ item.link }}" class="site-nav__link">{{ item.title }}</a>
                  </li>
              {% endif %}
              {% endfor %}
            </ul>

            <div class="clear"></div>

            <ul class="social">
              {% if options.facebook %}
              <li>
                <a href="{{ options.facebook }}" targer="_blank">
                  {% include ['components/icon-facebook.twig'] %}
                </a>
              </li>
              {% endif %}
              {% if options.pinterest %}
              <li>
                <a href="{{ options.pinterest }}" targer="_blank">
                  {% include ['components/icon-pinterest.twig'] %}
                </a>
              </li>
              {% endif %}
              {% if options.instagram %}
              <li>
                <a href="{{ options.instagram }}" targer="_blank">
                  {% include ['components/icon-instagram.twig'] %}
                </a>
              </li>
              {% endif %}
              {% if options.twitter %}
              <li>
                <a href="{{ options.twitter }}" targer="_blank">
                  {% include ['components/icon-twitter.twig'] %}
                </a>
              </li>
              {% endif %}
            </ul>

        </nav> <!-- end #site-navigation -->

    </div> <!-- end .mm-inner -->
</div> <!-- end .mm-overlay -->
